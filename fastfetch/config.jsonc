            "break",
        {
            "type": "chassis",
            "key": "󰌢 PC",
            "keyColor": "green"
        },
        {
            "type": "cpu",
            "key": "├󰻠 CPU",
            "keyColor": "green"
        },
        {
            "type": "gpu",
            "key": "├󰍛 GPU",
            "keyColor": "green"
