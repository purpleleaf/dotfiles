        {
            "type": "uptime",
            "key": "└󰅐 Uptime",
            "keyColor": "yellow"
        },
            "break",
        {
            "type": "de",
            "key": " DE",
            "keyColor": "blue"
        },
        {
            "type": "wm",
            "key": "├󰧨 Window Manager",
            "keyColor": "blue"
