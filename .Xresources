! Set transparency
URxvt*depth: 32
URxvt.background: [80]#282A36

! Dracula Xresources palette
*.foreground: #F8F8F2
*.background: #282A36
*.color0:     #000000
*.color8:     #4D4D4D
*.color1:     #FF5555
*.color9:     #FF6E67
*.color2:     #50FA7B
*.color10:    #5AF78E
*.color3:     #F1FA8C
*.color11:    #F4F99D
*.color4:     #BD93F9
*.color12:    #CAA9FA
*.color5:     #FF79C6
*.color13:    #FF92D0
*.color6:     #8BE9FD
*.color14:    #9AEDFE
*.color7:     #BFBFBF
*.color15:    #E6E6E6

URxvt*saveLines: 65535
URxvt.scrollBar_right: true
URxvt.scrollstyle: plain
Urxvt*secondaryScroll: true # Enable Shift-PageUp/Down in screen
! URxvt*cursorBlink: true
URxvt.cursorUnderline: true
URxvt.cursorColor: #ff79c6
URxvt*mouseWheelScrollPage: false
URxvt.url-launcher: palemoon
URxvt.matcher.button: 1
URxvt.keysym.M-u: perl:matcher:select

URxvt.iconFile: /usr/share/icons/Dracula/scalable/apps/xterm.svg

xterm*iconHint: /home/max/.icons/xterm-color_48x48.xpm

XTerm*faceName: xft:DejaVuSansM Nerd Font Mono:style=Regular:antialias=true:hinting=true:size=11:minspace=False, 
	xft:Noto Color Emoji:style=Regular:antialias=true:size=11:minspace=False, \
	xft:Monospace:size=11

! font
*.font: xft:DejaVuSansM Nerd Font Mono:style=Regular:antialias=true:hinting=true:size=11:minspace=False, 
	xft:Noto Color Emoji:style=Regular:antialias=true:size=11:minspace=False, \
	xft:Monospace:size=11

URxvt.perl-ext-common: tabbedex
URxvt.keysym.Control-t: perl:tabbedex:new_tab
URxvt.keysym.Control-Tab: perl:tabbedex:next_tab
URxvt.keysym.Control-Shift-Tab: perl:tabbedex:prev_tab
URxvt.keysym.Control-Shift-Left: perl:tabbedex:move_tab_left
URxvt.keysym.Control-Shift-Right: perl:tabbedex:move_tab_right
URxvt.keysym.Control-Shift-R: perl:tabbedex:rename_tab

!Xterm escapes, word by word movement
URxvt.keysym.Control-Left:    \033[1;5D
URxvt.keysym.Control-Right:    \033[1;5C

Xcursor.theme: Dracula-cursors
Xcursor.size: 16
